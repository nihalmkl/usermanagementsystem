<%- include('../layouts/header.ejs') -%>
<div class="container">
    <div class="login-container bg-light pb-5">
        <h2 class="text-center">User Registration</h2>
        <form id="registrationForm" action="/signup" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                <input type="submit" value="Register" class="btn btn-primary mt-3">

                <!-- Display flash messages -->
                <% if (typeof messages !== 'undefined') { %>
                    <% if (messages.errors) { %>
                        <div class="mt-3">
                            <% messages.errors.forEach(error => { %>
                                <p class="text-danger"><%= error %></p>
                            <% }) %>
                        </div>
                    <% } %>
                    <% if (messages.success) { %>
                        <div class="mt-3">
                            <p class="text-success"><%= messages.success %></p>
                        </div>
                    <% } %>
                <% } %>
            </div>
            
            <p class="text-center mt-3">
                Already have an account? <a href="/">Login here</a>.
            </p>
        </form>
    </div>
</div>

<script>
    document.getElementById('registrationForm').addEventListener('submit', function(event) {
        // Get form fields
        const username = document.getElementById('username').value.trim();
        const email = document.getElementById('email').value.trim();
        const password = document.getElementById('password').value.trim();

        if(username ===''||email ===''||password === ''){
            alert('All field are required')
            return false
        }

        // Clear previous errors
        const errorElements = document.querySelectorAll('.error');
        errorElements.forEach(element => element.remove());

        // Validate username (at least 5 characters)
        if (username.length <= 4) {
            showError('username', 'Username must be at least 5 characters long');
            event.preventDefault();
        }

        // Validate email (basic email format)
        const emailPattern = /^[a-z0-9._-]+@[gmail]+\.[com]{2,6}$/;
        if (!emailPattern.test(email)) {
            showError('email', 'Please enter a valid email address');
            event.preventDefault();
        }

        // Validate password (at least 6 characters)
        if (password.length < 6) {
            showError('password', 'Password must be at least 6 characters long');
            event.preventDefault();
        }
    });

    function showError(inputId, message) {
        const inputElement = document.getElementById(inputId);
        const errorElement = document.createElement('p');
        errorElement.className = 'error text-danger';
        errorElement.innerText = message;
        inputElement.parentNode.insertBefore(errorElement, inputElement.nextSibling);
    }
</script>
<%- include('../layouts/footer.ejs') -%>
